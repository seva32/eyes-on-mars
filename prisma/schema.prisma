generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FavoritePhoto {
  id       Int     @id @default(autoincrement())
  photoUrl String
  rover    String?
  camera   String?
  sol      Int?
  rating   Int?
  userId   Int?
  user     User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Profile {
  id        Int     @id @default(autoincrement())
  avatarUrl String?
  bio       String?
  planet    String?
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             Int             @id @default(autoincrement())
  username       String          @unique
  email          String?         @unique
  password       String?
  oauthProvider  String?
  oauthId        String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  profile        Profile?
  favoritePhotos FavoritePhoto[]
  accounts  Account[]
}

model Account {
  id                 String  @id @default(uuid())
  userId             Int
  provider           String
  providerAccountId  String
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
